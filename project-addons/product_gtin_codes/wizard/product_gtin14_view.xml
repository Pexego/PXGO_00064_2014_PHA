<openerp>
    <data>
        <record id="product_gtin_codes_partners_form" model="ir.ui.view">
            <field name="name">Product GTIN codes - Partners assign form</field>
            <field name="model">product.gtin14</field>
            <field name="arch" type="xml">
                <form string="GTIN14 associated partners">
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="gtin14" readonly="1"/>
                        <field name="partner_ids" domain="[('parent_id', '=', False), ('customer', '=', True)]">
                            <tree editable="bottom">
                                <field name="name" readonly="1"/>
                                <field name="state_id" readonly="1"/>
                                <field name="country_id" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer class="oe_right oe_button_box">
                        <button name="write"
                                type="object"
                                string="Save"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_gtin_codes_units_tree" model="ir.ui.view">
            <field name="name">Product GTIN codes - Configure units tree</field>
            <field name="model">product.gtin14.res.partner.rel</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="GTIN14 partners units for complete">
                    <field name="gtin14_id" invisible="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="units"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
