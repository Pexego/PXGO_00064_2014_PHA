<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_stock_available_form" model="ir.ui.view">
            <field name="name">stock.available.form</field>
            <field name="model">stock.available</field>
            <field name="arch" type="xml">
                <form string="Estimated quantity">
                    <label for="product_id">Product</label>
                    <field name="product_id" />
                    <label for="bom_id">BOM</label>
                    <field name="bom_id" />
                    <label for="product_qty">Product Qty.</label>
                    <field name="product_qty" />
                    <field name="state" invisible="1"/>

                    <button name="action_compute" states="draft"
                            string="Compute Data" type="object"
                            icon="terp-stock_format-scientific"/>

                    <group colspan="4">

                        <sheet>
                            <div class="oe_title">
                                <h1>Estimation</h1>
                            </div>
                            <notebook>
                                <page string="Products to Consume">
                                    <field name="product_lines"/>
                                </page>
                            </notebook>
                        </sheet>

                    </group>

                </form>

            </field>

        </record>


        <record id="action_view_menuitem" model="ir.actions.act_window">
            <field name="name">Stock / LDM</field>
            <field name="res_model">stock.available</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>


        <menuitem id="menu_view_stock_available_form" parent="mrp.menu_mrp_planning"
                  action="action_view_menuitem" sequence="140"/>

     </data>
</openerp>