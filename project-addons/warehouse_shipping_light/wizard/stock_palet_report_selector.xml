<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_palet_report_selector" model="ir.ui.view">
            <field name="name">Selecciona el tipo de etiquetas a imprimir</field>
            <field name="model">stock.palet.report.selector</field>
            <field name="arch" type="xml">
                <form string="Selecciona el tipo de etiquetas a imprimir" version="7">
                    <group>
                        <field name="report_type"/>
                    </group>
                    <footer>
                        <button name="print_report"
                                string="Imprimir"
                                type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancelar"
                                type="object"
                                special="cancel"
                                class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_palet_report_selector" model="ir.actions.act_window">
            <field name="name">Etiquetas de palet</field>
            <field name="res_model">stock.palet.report.selector</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_stock_palet_report_selector"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="ir_values_stock_palet_report_selector">
            <field name="key2">client_print_multi</field>
            <field name="model">stock.picking</field>
            <field name="name">Etiquetas de palet</field>
            <field name="value" eval="'ir.actions.act_window,%d'%action_stock_palet_report_selector"/>
        </record>
    </data>
</openerp>
